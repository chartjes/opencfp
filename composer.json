{
    "name": "opencfp/opencfp",
    "license": "MIT",
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "7.0.25"
        }
    },
    "require": {
        "php": ">=7",
        "aptoma/twig-markdown": "0.2.*",
        "cartalyst/sentinel": "^2.0.17",
        "ezyang/htmlpurifier": "dev-master",
        "guzzlehttp/guzzle": "~6.2",
        "illuminate/container": "~5.5",
        "illuminate/database": "~5.5",
        "illuminate/events": "~5.5",
        "illuminate/support": "~5.5",
        "illuminate/validation": "^5.5",
        "intervention/image": "~2.3",
        "michelf/php-markdown": "~1.7",
        "monolog/monolog": "~1.22",
        "pagerfanta/pagerfanta": "1.0.*@dev",
        "pimple/pimple": "3.*",
        "robmorgan/phinx": "*",
        "silex/silex": "2.*",
        "swiftmailer/swiftmailer": "5.0",
        "symfony/config": "^3.4",
        "symfony/console": "^3.4",
        "symfony/css-selector": "^3.4",
        "symfony/form": "^3.4",
        "symfony/intl": "^3.4",
        "symfony/lts": "^3.0",
        "symfony/security": "^3.4",
        "symfony/security-csrf": "^3.4",
        "symfony/translation": "^3.4",
        "symfony/twig-bridge": "^3.4",
        "symfony/validator": "^3.4",
        "symfony/yaml": "^3.4",
        "twig/extensions": "^1.5",
        "twig/twig": "1.*"
    },
    "require-dev": {
        "behat/behat": "^3.4",
        "behat/mink-extension": "^2.3",
        "behat/mink-selenium2-driver": "^1.3",
        "friendsofphp/php-cs-fixer": "^2.9.0",
        "fzaninotto/faker": "^1.5.0",
        "infection/infection": "^0.6.0",
        "localheinz/test-util": "~0.5.0",
        "mikey179/vfsStream": "^1.6.5",
        "mockery/mockery": "^1.0.0",
        "phpunit/phpunit": "^6.5.1"
    },
    "autoload": {
        "psr-4": {
            "OpenCFP\\": "classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenCFP\\Test\\": "tests/"
        },
        "files": [
            "tests/helpers.php"
        ]
    }
}
