{% extends "layouts/default.twig" %}
{% set active_page = "/" %}
{% block content %}
    <div class="jumbotron">
        <h1>Submit your talk idea for<br />{{ site.title }}</h1>
        <h3>Submissions will be accepted until midnight {{ site.enddate }}</h3>
        <h4>For information about the conference, please visit<br />
            <a href="{{ site.eventurl }}">{{ site.eventurl }}</a></h4>
        <br>
        {% if user is not defined  %}
            <a class="btn btn-large btn-warning" href="{{ site.url }}/signup">Create my profile!</a>
            <a class="btn btn-large btn-success" href="{{ site.url }}/login">
                <div class="small">I have a profile</div>
                <div>Let me in!</div>
            </a>
        {% endif %}
    </div>
    {% include "marketing.twig" %}
{% endblock %}
